<section>

    <div class="container">


        <h1 class="text-center">Edit Address </h1>
        
         <form action="/updatead" method="POST">
        
    <input type="hidden" value="{{da.id}}"name="id">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control " name="name" value="{{da.name}}"required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email"value="{{da.email}}"required>
            </div>
            <div class="form-group">

                <label>Phone no</label>
                <input type="text" class="form-control" name="number"value="{{da.number}}"required>
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" name="address"value="{{da.address}}"required>
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" name="city"value="{{da.city}}"required>
            </div>
            <div class="form-group">
                <label>State</label>
                <input type="text" class="form-control" name="state"value="{{da.state}}"required>
            </div>
            <div class="form-group">
                <label>Pin</label>
                <input type="text" class="form-control" name="pin"value="{{da.pin}}"required>
            </div>
            <br>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>